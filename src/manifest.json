{
  "manifest_version": 3,
  "name": "Jitsi Link Helper",
  "description": "A simple extension that allows you to create links for meetings on Jitsi platform",
  "version": "0.1.0",
  "minimum_chrome_version": "88",
  "icons": {
    "16": "assets/jitsi-logo-16x16.png",
    "48": "assets/jitsi-logo-48x48.png",
    "128": "assets/jitsi-logo-128x128.png"
  },
  "permissions": [
    "storage",
    "history"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/jitsi-logo-blue.svg"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {
    "default_title": "Jitsi Link Helper",
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
